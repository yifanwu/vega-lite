{
    "$schema": "http://vega.github.io/schema/vega/v3.0.json",
    "autosize": "pad",
    "padding": 5,
    "projections": [
        {
            "name": "projection",
            "type": "albersUsa",
            "scale": 1100
        }
    ],
    "data": [
        {
            "name": "source_0",
            "url": "data/zipcodes.csv",
            "format": {
                "type": "csv"
            },
            "transform": [
                {
                    "type": "formula",
                    "expr": "substring(datum.zip_code, 0, 1)",
                    "as": "digit"
                },
                {
                    "type": "geopoint",
                    "projection": "projection",
                    "fields": [
                        "longitude",
                        "latitude"
                    ],
                    "as": [
                        "longitude_geo",
                        "latitude_geo"
                    ]
                }
            ]
        }
    ],
    "signals": [
        {
            "name": "width",
            "update": "21"
        },
        {
            "name": "height",
            "update": "21"
        }
    ],
    "marks": [
        {
            "name": "nested_main_group",
            "type": "group",
            "encode": {
                "update": {
                    "width": {
                        "signal": "width"
                    },
                    "height": {
                        "signal": "height"
                    },
                    "fill": {
                        "value": "transparent"
                    }
                }
            },
            "marks": [
                {
                    "name": "marks",
                    "type": "symbol",
                    "role": "circle",
                    "from": {
                        "data": "source_0"
                    },
                    "encode": {
                        "update": {
                            "x": {
                                "field": "longitude_geo"
                            },
                            "y": {
                                "field": "latitude_geo"
                            },
                            "size": {
                                "value": 1
                            },
                            "fill": {
                                "scale": "color",
                                "field": "digit"
                            },
                            "shape": {
                                "value": "circle"
                            },
                            "opacity": {
                                "value": 0.7
                            }
                        }
                    }
                }
            ]
        }
    ],
    "scales": [
        {
            "name": "color",
            "type": "ordinal",
            "domain": {
                "data": "source_0",
                "field": "digit",
                "sort": true
            },
            "range": "category"
        }
    ],
    "legends": [
        {
            "fill": "color",
            "title": "digit",
            "encode": {
                "symbols": {
                    "update": {
                        "shape": {
                            "value": "circle"
                        }
                    }
                }
            }
        }
    ]
}